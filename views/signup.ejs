<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Registration Form</title>
    <script type="text/javascript" src="validate.js"></script>

    <link rel="stylesheet" href="signup_styles.css">

</head>


<body>

    <div class="signup-bg">
        <div class="wrapper">
            <div class="title">
                Patients Data Form
            </div>

            <div class="form">

                <div class="inputfield">
                    <label>Designation</label>
                    <div class="custom_select">
                        <select>
                      <option value="" selected Disabled>-- Select --</option>
                      <option value="Admin">Admin</option>
                      <option value="Doctor">Doctor</option>
                      <option value="Patient">Patient</option>
                    </select>
                    </div>
                </div>

                <div class="inputfield">
                    <label>Full Name</label>
                    <input type="text" class="input" id="name">
                </div>
                <div class="inputfield">
                    <label>Adhaar No.</label>
                    <input type="text" class="input" id="aadhar">
                </div>

                <div class="inputfield">
                    <label>Postal Address</label>
                    <input type="text" class="input" id="postal_add">
                </div>
                <div class="inputfield">
                    <label>Personal Address</label>
                    <input type="text" class="input" id="personal_add">
                </div>

                <div class="inputfield">
                    <label>Gender</label>
                    <div class="custom_select">
                        <select>
                      <option value=""selected Disabled>-- Select --</option>
                      <option value="male">Male</option>
                      <option value="female">Female</option>
                      <option value="other">Other</option>
                    </select>
                    </div>
                </div>

                <div class="inputfield">
                    <label>Date of Birth</label>
                    <input type="date" class="input" id="dob">
                </div>
                <div class="inputfield">
                    <label>Age</label>
                    <input type="text" class="input" id="age">
                </div>

                <div class="inputfield">
                    <label>Blood Group</label>
                    <div class="custom_select">
                        <select>
                      <option value=""selected Disabled>-- Select --</option>
                      <option value="A+">A+</option>
                      <option value="A-">A-</option>
                      <option value="B+">B+</option>
                      <option value="B-">B-</option>
                      <option value="O+">O+</option>
                      <option value="O-">O-</option>
                      <option value="AB+">AB+</option>
                      <option value="AB-">AB-</option>
                    </select>
                    </div>
                </div>

                <div class="inputfield">
                    <label>Email Address</label>
                    <input type="text" class="input" id="email">
                </div>
                <div class="inputfield">
                    <label>Mobile No. 1</label>
                    <input type="text" class="input" id="mob1">
                </div>

                <div class="inputfield">
                    <label>Mobile No. 2</label>
                    <input type="text" class="input" id="mob2">
                </div>




                <div class="inputfield">
                    <input type="submit" id="submit" value="Submit" class="btn">
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        //    $("#submit").click(function() {
        //       alert("here");
        //    })

        $("#submit").click(function() {
            var name = $("#name").val();
            var aadhar = $("#aadhar").val();
            var email = $("#email").val();
            var mob1 = $("#mob1").val();

            if (aadhar == '' || name == '' || email == '' || mob1 == '') {
                swal({
                    title: "Empty Fields!!",
                    text: "Please check the missing Field!!",
                    icon: "Warning",
                    button: "OK!",
                });
            } else {
                swal({
                    title: "Successfully Registered!!",
                    icon: "success",
                    button: "Done!",
                });
            }
        })
    </script>

</body>

</html>